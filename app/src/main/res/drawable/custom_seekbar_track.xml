<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#D3D3D3"/> <!-- Background color -->
            <size android:height="10dp"/> <!-- Height of the line -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="@color/green"/> <!-- Progress color -->
                <size android:height="10dp"/> <!-- Height of the progress -->
            </shape>
        </clip>
    </item>
</layer-list>
