<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/getstartphoto"
    tools:context=".GetStartActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/spotifiy"
android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>


    <TextView
        android:id="@+id/drlines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_above="@+id/mcGetStart"
        android:minLines="4"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="90dp"
        android:layout_centerHorizontal="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit.Sagittis enim  purus sed phasellus. Cursus ornare id  scelerisque aliquam."
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcGetStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:strokeWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/green"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get started"
            android:textSize="30dp"
            android:fontFamily="@font/outfit_medium"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:padding="20dp"/>
    </com.google.android.material.card.MaterialCardView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Enjoy listening to music"
    android:textColor="@color/white"
    android:fontFamily="@font/outfit_regular"
    android:textSize="25dp"
    android:layout_marginBottom="10dp"
    android:layout_above="@+id/drlines"
    android:layout_centerHorizontal="true"/>
</RelativeLayout>